# Assumes called from an includer of test_utils.ublu
# e.g., test.all.ublu

const *t_paradigm /some/dir/path
const *t_server MYSYSTEM
const *t_userprof MYUSERPROF
const *t_password MYPASSWORD
const *t_library MYLIB
const *t_sourcepf MYSRCPF
const *t_sourcembr MYSRCMBR

# Using ssl is of course the default.
tuple -true @ssl 

# FQP to a source pf mbr for t_record.ublu
fqp_file ( *t_library *t_sourcepf )
fqp_mbr ( ~ *t_sourcembr )
const *t_record_source_mbr_fqp ~

const *t_record_file_1 RECFILE1
const *t_record_file_2 RECFILE2

# Should we show all our consts?
# Remember, this includes the password.
tuple -false @showconst