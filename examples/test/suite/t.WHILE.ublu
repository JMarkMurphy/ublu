# Assumes called from test.all.ublu so
# ... so defaults are already included
#
# include -s test_utils.ublu
# ... is already included from test.all.ublu

# Assumes the present file is residing in examples/test/suite 
include -s ../../../examples/redir.ublu

# t.WHILE ( work_dir testsys testrptpf )
# ... work_dir - where tests can create files and leave them
# ... testsys - the server against which tests to be run
# ... testrptpf - open pf to write test report records
FUNC t.WHILE ( work_dir testsys testrptpf ) $[
    LOCAL @TMSTRT  LOCAL @TMEND 
    LOCAL @DESC    LOCAL @PFAIL
    LOCAL @tmpfile LOCAL @paradigm LOCAL @difflist
    
    put aaa
    
    put ${ ---------- }$
    put ${ Start t.WHILE }$
    put ${ ---------- }$
    put ${ }$
        
    cat_fp ( @@work_dir t.WHILE.testwhile.txt )
    put -to @tmpfile ~
    cat_fp ( *t_paradigm t.WHILE.testwhile.txt )
    put -to @paradigm ~
    cat_fp ( @@work_dir t.WHILE.testwhile.diff.txt )
    put -to @difflist ~
    
    put bbb
    map -to @result
    
    string -to @FILNAM -trim t.WHILE.ublu
    @result -> @FILNAM
    
    string -to @DESC -cat ${ testwhile:test WHILE loops:diff in }$ @difflist
    @result -> @DESC
    
    currentTimeMillis ( )
    tuple -assign @TMSTRT ~
    @result -> @TMSTRT
    
    put ccc
    
    \\ ${ Assumes the present file is residing in examples/test/suite }$
    redir ( @tmpfile $[ include ../testwhile.ublu ]$ )

    put ddd
    currentTimeMillis ( )
    tuple -assign @TMEND ~
    @result -> @TMEND
    
    string -to ~ -cat ${ diff -u }$ @tmpfile
    ~ -to ~ -bl
    ~ -to ~ -cat @paradigm
    
    \\ ${ announce }$
    put -n -s *** lifo -dup put -n -s ~
    
    system -to ~ ~
    
    lifo -dup

    calljava -to ~ -method getOutput -obj ~
    put -tofile @difflist ~
        
    calljava -to ~ -method getRc -obj ~
    
    \\ ${ announce }$
    lifo -dup put -n -s ~
    
    eval -to ~ == 0 ~ 
    
    IF ~ THEN $[ put -to @PFAIL P ]$ ELSE $[ put -to @PFAIL F ]$
      
    \\ ${ announce }$
    put @PFAIL
      
    @result -> @PFAIL 
    
    writeMapToRecord ( @@testrptpf @result )
    
    put ${ ----------- }$    
    put ${ End t.WHILE }$
    put ${ ----------- }$
    put ${ }$

]$
